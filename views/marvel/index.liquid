{% layout 'layout.liquid' %}
{% block content %}
 {% if marvel.length > 0 %}
  <div>
    <h2 class="dsiplay-6">All Characters</h2>
    <div class="row">
      {% for marvel in marvel %}
        <div class="card" style="width: 18rem;">
          <h5 class="card-header">{{ marvel.character }}
          </h5>
          <div class="card-body">
            <h5 class="card-title">
              {% if marvel.heroAlive %}
                Alive
              {% else %}
                RIP
              {% endif %}
            </h5>
            <p class="card-text">Hero name: {{marvel.heroName}}
            </p>
            <p class="card-text">Solo movies: {{marvel.movies}}
            </p>
            <a class="btn btn-info" href="/marvel/{{marvel.id}}">
              View
              {{marvel.character}}
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
  {% else %}
      <div>
        <h2 class="display-6">No characters yet... time to add some!</h2>
      </div>
 {% endif %}
{% endblock %}